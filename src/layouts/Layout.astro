---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en-CA">
  <head>
    <!-- Basic -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- SEO Meta -->
    <meta
      name="description"
      content="Karuna Law Office - Provides legal services to refugees and migrants seeking a secure and positive life in Canada."
    />
    <meta
      name="keywords"
      content="immigration lawyer, refugee law, Toronto immigration, refugee claims, immigration services, Canada immigration"
    />
    <meta name="author" content="Karuna Law" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://karunalaw.ca/" />

    <!-- Open Graph (Facebook, WhatsApp, LinkedIn) -->
    <meta
      property="og:title"
      content="Karuna Law - A Law Office Serving Refugees And Immigrants | Toronto"
    />
    <meta
      property="og:description"
      content="Provides legal services to refugees and migrants seeking a secure and positive life in Canada."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://karunalaw.ca/" />
    <meta property="og:image" content="pnm" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_CA" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Karuna Law - A Law Office Serving Refugees And Immigrants | Toronto"
    />
    <meta
      name="twitter:description"
      content="Provides legal services to refugees and migrants seeking a secure and positive life in Canada."
    />
    <meta name="twitter:image" content="https://karunalaw.ca/og-image.svg" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Title -->
    <title>
      Karuna Law - A Law Office Serving Refugees And Immigrants | Toronto
    </title>

    <!-- Structured Data (Local Legal Business) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Karuna Law",
        "url": "https://karunalaw.ca",
        "logo": "https://karunalaw.ca/logo.png",
        "image": "https://karunalaw.ca/og-image.svg",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Toronto",
          "addressRegion": "ON",
          "addressCountry": "CA"
        },
        "areaServed": "Toronto, Ontario",
        "description": "Provides legal services to refugees and migrants seeking a secure and positive life in Canada."
      }
    </script>
  </head>
  <body>
    <!-- Header Component -->
    <Header />
    <main class="flex w-full flex-col items-center justify-center">
      <slot name="content">
        <!-- Default content if slot is empty -->
        <div class="text-center">
          <h2 class="text-3xl font-semibold text-gray-800 mb-4">
            Welcome to Karuna Law
          </h2>
        </div>
      </slot>
    </main>
    <Footer />
  </body>
</html>

<script>
  // 1. Define the logic
  const initScrollAnimations = () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("active");
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // 2. Select all possible animation classes
    const targets = document.querySelectorAll(
      ".slide-in, .slide-in-right, .slide-in-up",
    );
    targets.forEach((target) => observer.observe(target));
  };

  // 3. Initialize on first load
  initScrollAnimations();

  // 4. Re-initialize when navigating between pages (View Transitions)
  document.addEventListener("astro:after-swap", initScrollAnimations);
</script>
