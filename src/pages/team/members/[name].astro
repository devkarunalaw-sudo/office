---
import Layout from "../../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { BASE_URL } from "../../../consts";

export async function getStaticPaths() {
  const team = await getCollection("team");
  return team.map((member) => ({
    params: { name: member.slug },
    props: { member },
  }));
}

type Props = {
  member: CollectionEntry<"team">;
};

const { member } = Astro.props;
const { Content } = await member.render();
---

<Layout title={`Karuna Law - ${member.data.name}`}>
  <article slot="content" class="mt-30 mx-auto py-8 px-4 max-w-4xl">
    <div class="flex flex-col items-center">
      <img
        src=`${BASE_URL}${member.data.image || "person.png"}`
        alt={member.data.name}
        class="w-48 h-48 rounded-full object-cover mb-4"
      />
      <h1 class="text-4xl font-bold mb-2">{member.data.name}</h1>
      <p class="text-xl text-gray-600 mb-4">{member.data.title}</p>
    </div>

    <div class="max-w-prose mx-auto px-4 prose text-justify">
      <Content />
    </div>

    <div class="max-w-prose mx-auto px-4">
      {
        member.data.articles && member.data.articles.length > 0 && (
          <div class="border-t border-gray-200 pt-6 mb-6">
            <h2 class="text-2xl font-semibold mb-4">Articles & Publications</h2>
            <div class="space-y-4">
              {member.data.articles.map((article) => (
                <div class="border-l-4 border-dharma-burgundy pl-4 py-2">
                  <a
                    href={article.url}
                    class="text-xl font-medium text-blue-600 hover:underline"
                  >
                    {article.title}
                  </a>
                  <p class="text-sm text-gray-500 mt-1">
                    {new Date(article.date).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                  {article.description && (
                    <p class="text-gray-700 mt-2">{article.description}</p>
                  )}
                </div>
              ))}
            </div>
          </div>
        )
      }

      <div class="border-t border-gray-200 pt-6">
        <h2 class="text-2xl font-semibold mb-4">Contact Information</h2>

        {
          member.data.location && (
            <p class="mb-2">
              <strong>Location:</strong> {member.data.location}
            </p>
          )
        }

        {
          member.data.socialLinks?.email && (
            <p class="mb-2">
              <strong>Email:</strong>

              <a
                href={member.data.socialLinks.email}
                class="text-blue-600 hover:underline"
              >
                {member.data.socialLinks.email.replace("mailto:", "")}
              </a>
            </p>
          )
        }

        {
          member.data.socialLinks?.linkedin && (
            <p class="mb-2">
              <strong>LinkedIn:</strong>

              <a
                href={member.data.socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-600 hover:underline"
              >
                View Profile
              </a>
            </p>
          )
        }
      </div>

      <a
        href=`${BASE_URL}team`
        class="mt-8 inline-block text-red-700 hover:text-red-800 hover:underline"
      >
        ‚Üê Back
      </a>
    </div>
  </article>
</Layout>
